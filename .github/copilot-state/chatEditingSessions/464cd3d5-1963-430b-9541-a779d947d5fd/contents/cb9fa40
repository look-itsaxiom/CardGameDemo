/**
 * Main data export point combining all card definitions
 */

export * from './core-cards';
export * from './tactical-cards';

import { CORE_DATA } from './core-cards';
import { TACTICAL_CARDS } from './tactical-cards';

// Export a unified data object
export const GAME_DATA = {
  ...CORE_DATA,
  ...TACTICAL_CARDS
} as const;

// Export quick access arrays
export const ALL_SPECIES = Object.values(CORE_DATA.species);
export const ALL_ROLES = Object.values(CORE_DATA.roles);
export const ALL_EQUIPMENT = Object.values(CORE_DATA.equipment);
export const ALL_ACTIONS = Object.values(TACTICAL_CARDS.actions);
export const ALL_BUILDINGS = Object.values(TACTICAL_CARDS.buildings);
export const ALL_QUESTS = Object.values(TACTICAL_CARDS.quests);
export const ALL_COUNTERS = Object.values(TACTICAL_CARDS.counters);
export const ALL_ADVANCES = Object.values(TACTICAL_CARDS.advances);
